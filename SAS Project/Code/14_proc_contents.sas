/*==============================================================================
Program: 14_proc_contents.sas
Purpose: Inspect structure, metadata, and attributes of SAS datasets.
==============================================================================*/

/*-----------------------------------------------------------------------------
1) Basic usage
-----------------------------------------------------------------------------*/
proc contents data=sashelp.cars;
run;

/*-----------------------------------------------------------------------------
2) Order variables by position (VARNUM)
-----------------------------------------------------------------------------*/
proc contents data=sashelp.cars varnum;
run;

/*-----------------------------------------------------------------------------
3) Short output (NOPRINT + OUT)
-----------------------------------------------------------------------------*/
proc contents data=sashelp.cars
              out=work.cars_metadata
              noprint;
run;

proc print data=work.cars_metadata(obs=10) noobs;
run;

/*-----------------------------------------------------------------------------
4) Show only variable metadata
-----------------------------------------------------------------------------*/
proc contents data=sashelp.cars position;
run;

/*-----------------------------------------------------------------------------
5) Inspect entire library
-----------------------------------------------------------------------------*/
proc contents data=sashelp._all_ nods;
run;

/*-----------------------------------------------------------------------------
6) Inspect all datasets in WORK library
-----------------------------------------------------------------------------*/
proc contents data=work._all_;
run;

/*-----------------------------------------------------------------------------
7) Display engine and storage details
-----------------------------------------------------------------------------*/
proc contents data=sashelp.cars details;
run;

/*------------------------------------------------------------------------------
End of program
------------------------------------------------------------------------------*/
