#: set s dp(150)

<TabbedCanvasEx@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "CanvasEx"
        CanvasEx:
    TabbedPanelItem:
        text: "CanvasEx2"
        CanvasEx2:
    TabbedPanelItem:
        text: "CanvasEx3"
        CanvasEx3:
    TabbedPanelItem:
        text: "CanvasEx4"
        CanvasEx4:
    TabbedPanelItem:
        text: "CanvasEx5"
        CanvasEx5:
    TabbedPanelItem:
        text: "CanvasEx6"
        CanvasEx6:
    TabbedPanelItem:
        text: "CanvasEx7"
        CanvasEx7:

<CanvasEx>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            size: s, s
            pos: self.center_x + s/2, self.center_y - s/2
        Ellipse:
            pos: 100, 300
            size: s, s
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)
            width: 5

<CanvasEx2>:
    canvas:
        Color:
            rgb: 0, 1, 0
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 5
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 5

<CanvasEx3>:
    canvas:
        Color:
            rgb: 0, 0, 1
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 5
        Color:
            rgb: 1, 0, 1, 0.5
        Line:
            ellipse: (500, 300, 100, 200) # center_x, center_y, radius_x, radius_y
            width: 5
        Line:
            rectangle: (800, 200, 100, 200) # x, y, width, height
            width: 5

<CanvasEx4>:
    Button:
        text: 'Click'
        pos: 50, 450
        on_press: root.click_to_move()

<CanvasEx6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 1, 0, 0
                Rectangle:
                    size: self.size
        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size

<CanvasEx7>:
    Widget:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: self.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size

    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: self.size