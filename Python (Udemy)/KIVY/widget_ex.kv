<ImagesEx@GridLayout>:
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        keep_ratio: False
        allow_stretch: True
    Image:
        source: "images/donut.gif"
        anim_delay: 1/60

<WidgetsEx>:
    cols:3
    ToggleButton:
        text: "OFF"
        on_state: root.toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click"
        on_press: root.click_button()
        disabled: not root.is_count
    Label:
        text: root.i
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: .5, .5, .5, 1
    Switch:
        id: switch
        active: True
#        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: slider
        min: 0
        max: 100
        value: 50
#        on_value: root.on_slider_value(self)
        orientation: "vertical"
        disabled : not switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "50dp"
            color: .5, .8, .5, 1
        ProgressBar:
            max: 100
            value: slider.value
    TextInput:
        id: textinput
        size_hint: None, 1
        width: "100dp"
        text: "Here we go"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "User Input: " + root.text_input