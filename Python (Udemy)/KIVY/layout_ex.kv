<AnchorLayoutEx>:
    # right, left, center
    anchor_x: "center"
    # bottom, top, center
    anchor_y: "center"
    BoxLayout:
        size_hint: 0.5, 0.5
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutEx>:
    orientation: "vertical"
    # spacing: "10dp"
    Button:
        text: "A"
        size_hint: 0.5, None
        # size: "100dp", "60dp"
        # width: "100dp"
        height: "60dp"
        # x, right, center_x
        # y, top, center_y
        pos_hint: { "x": 0.5 }
    BoxLayout:
        orientation: "horizontal"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
