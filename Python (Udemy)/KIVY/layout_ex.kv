<TabbedLayoutEx@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Widget"
        MainWidget:
    TabbedPanelItem:
        text: "BoxLayout"
        BoxLayoutEx:
    TabbedPanelItem:
        text: "AnchorLayout"
        AnchorLayoutEx:
    TabbedPanelItem:
        text: "GridLayout"
        GridLayoutEx:
    TabbedPanelItem:
        text: "StackLayout"
        StackLayoutEx:
    TabbedPanelItem:
        text: "ScrollView"
        ScrollViewEx:
    TabbedPanelItem:
        text: "PageLayout"
        PageLayoutEx:

<PageLayoutEx>:
    MainWidget:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayoutEx:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
    AnchorLayoutEx:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos
    GridLayoutEx:
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                size: self.size
                pos: self.pos

<ScrollViewEx@ScrollView>:
    StackLayoutEx:
        size_hint: 1, None
        height: self.minimum_height

